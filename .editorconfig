# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js,*.json]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.yaml, *.yml]
indent_style = space
indent_size = 2
